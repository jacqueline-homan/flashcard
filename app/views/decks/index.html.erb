<h3>Welcome</h3>

<%= link_to "Add New Deck", new_deck_path %>
<%= link_to "Log out", session_path,method: :delete %>
<% @decks.each do |deck| %>
  <div>
  	<%= link_to deck.name, deck %>
  	-
  	<%= link_to "Edit", edit_deck_path(deck) %>
